daemon off;
worker_processes <%= ENV['NGINX_WORKERS'] || 'auto' %>;

events {
    use epoll;
    accept_mutex on;
    worker_connections <%= ENV['NGINX_WORKER_CONNECTIONS'] || 1024 %>;
}

http {
    include mime.types;
    default_type application/octet-stream;

    log_format l2met 'measure#nginx.service=$request_time request_id=$http_x_request_id';
    access_log <%= ENV['NGINX_ACCESS_LOG_PATH'] || '/dev/stdout' %> l2met;
    error_log <%= ENV['NGINX_ERROR_LOG_PATH'] || '/dev/stderr' %>;

    sendfile on;                 # Enables the use of sendfile for serving static files, improving performance by avoiding the overhead of the kernel passing data between user space and the kernel.
    keepalive_timeout 20s;       # Specifies the timeout for keep-alive connections with the client. If the client does not send a new request within 20 seconds, the server closes the connection.
    keepalive_requests 30;       # Limits the number of requests that can be sent over a single keep-alive connection. After 30 requests, the connection will be closed.
    gzip on;                     # Enables gzip compression for responses, which can reduce the size of the response and improve load times for clients.

    proxy_connect_timeout 25s;   # Sets the timeout for establishing a connection to the proxied server. If the connection cannot be established within 25 seconds, the request fails.
    proxy_send_timeout 25s;      # Specifies the timeout for sending data to the proxied server. If the server does not receive data within 25 seconds, the connection is closed.
    proxy_read_timeout 25s;      # Sets the timeout for reading data from the proxied server. If no data is received within 25 seconds, the connection is closed.
    send_timeout 25s;            # Defines the timeout for transmitting a response to the client. If the client does not receive the entire response within 25 seconds, the connection is closed.

    server {
        listen <%= ENV["PORT"] %>;
        server_name 10ax.eskihub.com;

        location / {
            proxy_pass https://10ax.online.tableau.com/;
            proxy_ssl_name '10ax.online.tableau.com';
            proxy_set_header x-forwarded-host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-Proto $http_x_forwarded_proto;
            proxy_set_header Host '10ax.online.tableau.com';
            proxy_cookie_domain '10ax.online.tableau.com' 'eskihub.com';
        }
    }

    server {
        listen <%= ENV["PORT"] %>;
        server_name dub01.eskihub.com;

        location / {
            proxy_pass https://dub01.online.tableau.com/;
            proxy_ssl_name 'dub01.online.tableau.com';
            proxy_set_header x-forwarded-host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-Proto $http_x_forwarded_proto;
            proxy_set_header Host 'dub01.online.tableau.com';
            proxy_cookie_domain 'dub01.online.tableau.com' 'eskihub.com';
        }
    }
}
